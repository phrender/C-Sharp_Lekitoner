<Window x:Class="WPF_uppgift_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Comparison" Height="350" Width="336">
    <Grid>

        <!-- Labels -->
        <Label Height="28" HorizontalAlignment="Left" Margin="125,150,0,0" Name="lbResult" VerticalAlignment="Top"  HorizontalContentAlignment="Center"/>
        <Label Content="Text one:" Height="28" HorizontalAlignment="Left" Margin="12,43,0,0" Name="lbTextOne" VerticalAlignment="Top" />
        <Label Content="Label" Height="28" HorizontalAlignment="Left" Margin="182,43,0,0" Name="lbTextTwo" VerticalAlignment="Top" />

        <!-- Textboxes -->
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,77,0,0" Name="tbCompareBox1" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,77,12,0" Name="tbCompareBox2" VerticalAlignment="Top" Width="120" />
        
        <!-- Button -->
        <Button Content="Compare" Height="23" HorizontalAlignment="Left" Margin="123,205,0,0" Name="btnCompare" VerticalAlignment="Top" Width="75" Click="btnCompare_Click" />
        
    </Grid>
</Window>
